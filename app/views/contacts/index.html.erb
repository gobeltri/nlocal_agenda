<h1>nLocal Agenda</h1>

<%= form_tag contacts_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search_name, params[:search_name], :placeholder => 'Name' %>
    <%= text_field_tag :search_surname, params[:search_surname], :placeholder => 'Surname' %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone numbers</th>
      <th>Type</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= image_tag contact.avatar.url(:thumb) %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.phone_numbers %></td>
        <td><%= contact.contact_type %></td>
        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Contact', new_contact_path %>

